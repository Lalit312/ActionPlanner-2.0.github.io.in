

    <%- include("header") -%>

    <div class="box" id="heading">
        <h1 style="color:#00bfff;"><%= listTitle %> </h1>

    </div>

    
    <div class="box">

            <%     newlistItems.forEach(function(item) {%>
            
            <form action="/delete" method="post">

                <div class="item" >
                    <input type="checkbox" name="checkbox" value="<%= item._id%>" onchange="this.form.submit()">
                     <p> <%= item.name %> </p>
                </div>

                <!-- This is the type of input which is hidden from the user who is going to checkk the checkbox -->
                <!-- We can't have value attribute of the checkbox , that's y we are creating this input.... -->
               <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>
 

            <% }) %>


            <form class="item" action="/" method="post" autocomplete="off">
                <input type="text" name="addItem" placeholder="Add Item">
                <button type="submit" name="list" value="<%= listTitle %>">+</button>
            </form>
    </div>
    
    <%- include("footer") -%>